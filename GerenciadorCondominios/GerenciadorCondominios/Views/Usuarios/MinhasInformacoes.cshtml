@model GerenciadorCondominios.BLL.Models.Usuario
@{
    ViewData["Title"] = "Minhas Informações";
}

<partial name="_Confirmacoes" />

<div class="card horizontal">
    <div class="card-image">
        <i><img src="@Url.Content(Model.Foto)" height="250" /></i>
    </div>

    <div class="card-stacked">
        <div class="card-content">
            <div class="row">
                <div class="col s6">
                    <span class="card-text grey-text darken-2">Nome - @Model.UserName</span>
                </div>
                <div class="col s6">
                    <span class="card-text grey-text darken-2">Email - @Model.Email</span>
                </div>
            </div>

            <div class="row">
                <div class="col s6">
                    <span class="card-text grey-text darken-2">CPF - @Model.CPF</span>
                </div>
                <div class="col s6">
                    <span class="card-text grey-text darken-2">Telefone - @Model.PhoneNumber</span>
                </div>
            </div>
        </div>

        <div class="card-action">
            <a asp-controller="Usuarios" asp-action="Atualizar" asp-route-id="@Model.Id" class="btn-small grey darken-3">Atualizar</a>
        </div>
    </div>
</div>